<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Rate your swap</title>
    <link rel="stylesheet" href="/css/userratings.css">
</head>
<body>
    <div class="container">
        <header class="header">
            <button class="back-button">←</button>
            <h1>Rate your swap</h1>
        </header>
        
        <div class="rating">
            <div class="stars">
                {% for i in range(5) %}
                    <span class="star" data-value="{{ i + 1 }}">{% if i < 4 %}★{% else %}☆{% endif %}</span>
                {% endfor %}
            </div>
            <div class="bar"></div>
            <div class="score">4</div>
        </div>

        <div class="issues">
            <p>Please select one or more issues to submit a rating</p>
            <div class="grid">
                {% set issues = ['Responsiveness', 'Timeliness', 'Trustworthiness', 'Politeness', 'Competitive Rate', 'Initiative', 'Pleasant'] %}
                {% for issue in issues %}
                    <button class="issue-btn">{{ issue }}</button>
                {% endfor %}
            </div>
        </div>

        <!-- Add Textarea for additional comments -->
        <div class="comment-section">
            <p>Additional comments (optional):</p>
            <textarea id="comment" rows="4" placeholder="Add your comments here..."></textarea>
        </div>

        <button class="confirm-button">Confirm</button>
    </div>
    
    <!-- Inject userId and tradeId dynamically via Nunjucks -->
    <script>
        const userId = "{{ userId }}";  // Dynamic userId
        const tradeId = "{{ tradeId }}";  // Dynamic tradeId
    </script>
    <script src="/js/ratingspage.js" defer></script>

    {% include "partials/footer.njk" %}
</body>
</html>
