<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Rate your swap</title>
    <link rel="stylesheet" href="/css/userratings.css">
</head>
<body>
    <div class="container">
        <header class="header">
            <button class="back-button" onclick="window.history.back()">←</button>
            <h1>Rate your swap</h1>
        </header>
        
        <div class="rating">
            <div class="stars">
                {% for i in range(5) %}
                    <span class="star" data-value="{{ i + 1 }}">☆</span>
                {% endfor %}
            </div>
            <div class="progress-bar-container">
                <div class="progress-bar" data-rating="0"></div>
            </div>
        </div>

        <div class="issues">
            <p>Please select one or more issues to submit a rating</p>
            <div class="grid">
                {% set issues = ['Responsiveness', 'Timeliness', 'Trustworthiness', 'Politeness', 'Competitive Rate', 'Initiative', 'Pleasant'] %}
                {% for issue in issues %}
                    <button class="issue-btn">{{ issue }}</button>
                {% endfor %}
            </div>
        </div>

        <div class="comment-section">
            <p>Additional comments (optional):</p>
            <textarea class="comment-box" rows="4" placeholder="Add your comments here..."></textarea>
        </div>

        <button class="confirm-button">Confirm</button>
    </div>

    <script>
        const raterId = "{{ raterId | safe }}"; // User submitting the rating
        const ratedUserId = "{{ ratedUserId | safe }}"; // User being rated
        const tradeId = "{{ tradeId | safe }}"; // Trade ID

        if (!raterId || !ratedUserId || !tradeId) {
            console.error("raterId, ratedUserId, or tradeId is not defined. Please check if they are passed correctly from the server.");
        }
    </script>
    <script src="/js/ratingspage.js" defer></script>

    {% include "partials/footer.njk" %}
</body>
</html>
