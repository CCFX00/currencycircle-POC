<!DOCTYPE html>
<html lang="en">
<head>
    {% include "partials/header.njk" %}
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Trade History</title>
    <script src="/js/tradehistory.js" defer></script>
    <link rel="stylesheet" href="/css/tradehistory.css">
</head>
<body>
    <div class="status-bar">
        <span class="time">9:41</span>
        <div class="status-icons">
            <i class="fas fa-signal"></i>
            <i class="fas fa-wifi"></i>
            <i class="fas fa-battery-full"></i>
        </div>
    </div>
    <div class="trade-history-container">
        <div class="nav-bar">
            <i class="fas fa-bars menu-icon"></i>
            <h1 class="page-title">Trade History</h1>
        </div>

        <div class="tab-navigation">
            <div id="completed-tab" class="tab active">Completed</div>
            <div id="canceled-tab" class="tab">Cancelled</div>
        </div>

        <!-- Completed Tab Content -->
        <div id="completed-content" class="trade-content active">
            <div class="currency-card">
                <div class="currency-header">
                    <span class="date">06/04/2023</span>
                    <span class="exchange-rate">1 USD = 660 XAF</span>
                    <i class="fas fa-lock"></i>
                </div>
                <div class="currency-user">
                    <div class="user-profile">
                        <div class="profile-pic" style="background-image: url('/images/profiles/ateking.png');"></div>
                        <span class="username">Ateking12</span>
                    </div>
                    <div class="user-info">
                        <div class="rating">
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                        </div>
                        <div class="location">
                            <i class="fas fa-map-marker-alt"></i>
                            <span>Douala, Cameroon</span>
                        </div>
                    </div>
                    <div class="trade-stats">
                        <div class="completed-trades">
                            <i class="fas fa-check-circle"></i>
                            <span>3 Completed trades</span>
                        </div>
                        <div class="avg-completion-time">
                            <i class="far fa-clock"></i>
                            <span>08 hrs avg completion time</span>
                        </div>
                    </div>
                </div>
                <div class="currency-exchange">
                    <div class="currency-amount">
                        <span class="currency-code">USD</span>
                        <span class="amount">1200</span>
                    </div>
                    <i class="fas fa-exchange-alt"></i>
                    <div class="currency-amount">
                        <span class="currency-code">XAF</span>
                        <span class="amount">792,000</span>
                    </div>
                </div>
                <div class="currency-user">
                    <div class="user-profile">
                        <div class="profile-pic" style="background-image: url('/images/profiles/tiksfon.png');"></div>
                        <span class="username">Tiksfon</span>
                    </div>
                    <div class="user-info">
                        <div class="rating">
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                        </div>
                        <div class="location">
                            <i class="fas fa-map-marker-alt"></i>
                            <span>Douala, Cameroon</span>
                        </div>
                    </div>
                    <div class="trade-stats">
                        <div class="completed-trades">
                            <i class="fas fa-check-circle"></i>
                            <span>3 Completed trades</span>
                        </div>
                        <div class="avg-completion-time">
                            <i class="far fa-clock"></i>
                            <span>08 hrs avg completion time</span>
                        </div>
                    </div>
                </div>
                <hr class="review-divider">
                <a href="#" class="leave-review">Leave review</a>
            </div>
        </div>

        <!-- Cancelled Tab Content (empty for now) -->
        <div id="canceled-content" class="trade-content">
            <div class="cancelled-trade-card">
                <div class="cancelled-trade-header">
                    <span class="cancelled-trade-date">06/04/2023</span>
                    <span class="cancelled-trade-exchange-rate">1 USD = 660 XAF</span>
                </div>
                <div class="cancelled-trade-users">
                    <div class="cancelled-trade-user cancelled-trade-user-left">
                        <div class="profile-pic" style="background-image: url('/images/profiles/tiksfon.png');"></div>
                        <span class="cancelled-trade-username">Tiksfon</span>
                        <span class="cancelled-trade-location">New York, USA</span>
                        <div class="cancelled-trade-rating">
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                        </div>
                    </div>
                    <div class="cancelled-trade-exchange">
                        <div class="cancelled-trade-exchange-row">
                            <span class="cancelled-trade-currency-code">GBP</span>
                            <span class="cancelled-trade-amount">1200</span>
                        </div>
                        <i class="fas fa-exchange-alt cancelled-trade-exchange-icon"></i>
                        <div class="cancelled-trade-exchange-row">
                            <span class="cancelled-trade-currency-code">XAF</span>
                            <span class="cancelled-trade-amount">792,000</span>
                        </div>
                    </div>
                    <div class="cancelled-trade-user cancelled-trade-user-right">
                        <div class="profile-pic" style="background-image: url('/images/profiles/ateking.png');"></div>
                        <span class="cancelled-trade-username">Kate</span>
                        <span class="cancelled-trade-location">New York, USA</span>
                        <div class="cancelled-trade-rating">
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% include "partials/footer.njk" %}
</body>
</html>
